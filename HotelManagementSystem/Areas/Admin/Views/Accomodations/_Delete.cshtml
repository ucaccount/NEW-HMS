@model HotelManagementSystem.Areas.Admin.ViewModel.AccomodationActionViewModel

<div class="modal-content">
    <div class="modal-header">
        @if (Model.Id > 0)
        {
            <h5 class="modal-title" id="exampleModalLabel">Delete Accomodation</h5>
        }


        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form id="actionForm">
            <input id="hiddenId" type="hidden" name="Id" value="@Model.Id" />
            <div class="alert alert-danger" role="alert">
                Are you sure you want to delete this Accomodation ?
            </div>

        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i>Close</button>
        <button id="actionButton" type="button" class="btn btn-danger"><i class="fas fa-trash-alt mr-1"></i>Delete</button>
    </div>
</div>

<script>
    $("#actionButton").click(function () {

        $.ajax({
            url: '@Url.Action("Delete","Accomodations")',
            type: "POST",
            data: $("#actionForm").serialize()
        }).done(function(response) {
            if (response.success) {
                debugger;

                location.href = '@Url.Action("Index","Accomodations")';


            } else {
                alert("Unable to perform action on Accomodation Package");
            }
        });
    });
</script>